#include<stdio.h>

int main()
{

    float a = 2.1234567891123456789; // size 4byte precision 7 digits
    double b = 2.1234567891123456789;//size 8byte precision 16 digits
    long double c = 2.1234567891123456789; //size 16byte precision 19 digits
    
    printf("float %.16f\n",a);
    printf("double %.19lf\n",b);
    printf("long double %.21Lf\n",c);
    
    int v1=4/5;
    
    float f1=4/5;
    
    float f2 = 4.0/5.0;
    
    printf("v1 %d , f1 %f , f2 %f \n",v1,f1,f2);
    
    /* output:
   
    float 2.1234567165374756
    double 2.1234567891123456995
    long double 2.123456789112345699522
    v1 0 , f1 0.000000 , f2 0.800000 


    */    
    
    
    return 0;
}
